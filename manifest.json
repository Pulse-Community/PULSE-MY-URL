{
  "manifest_version": 3,
  "name": "PULSE MY URL",
  "version": "1.2.0",
  "description": "Sendet URLs an einen konfigurierbaren Webhook und kann Seiteninhalt als Markdown extrahieren",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "options_page": "html/options.html",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pulse-my-url@example.com"
    }
  }
} 