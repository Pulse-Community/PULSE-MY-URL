{
  "name": "pulse-my-url",
  "version": "1.2.0",
  "description": "Ein Browser-Plugin, das URLs und Seiteninhalt als Markdown an einen konfigurierbaren Webhook sendet",
  "scripts": {
    "build:css": "tailwindcss -i ./styles/src/input.css -o ./styles/dist/output.css",
    "watch:css": "tailwindcss -i ./styles/src/input.css -o ./styles/dist/output.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "@tailwindcss/forms": "^0.5.3"
  }
} 